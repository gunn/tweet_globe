{{view App.MapView }}

<div id="tweets">
  <span id="info">
    Displaying
    {{App.indexController.filteredTweets.length}}
    of
    {{App.indexController.length}}
  </span>

  {{ view Ember.TextField
     placeholder="Filter"
     valueBinding="App.indexController.searchTerm" }}

  <ul>
    {{#each App.indexController.filteredTweets}}
      <li {{bindAttr class=odd}}>
        <div>
          <div class="time">
            {{time}}
          </div>

          <div class="text">
            {{text}}
          </div>
        </div>
      </li>
    {{/each}}
  </ul>
</div>
